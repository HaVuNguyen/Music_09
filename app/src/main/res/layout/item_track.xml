<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/image_track"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_name_song"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:singleLine="true"
        android:text="@string/name_song"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/image_track"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/text_name_sing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:text="@string/name_sing"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_15"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/image_track"
        app:layout_constraintTop_toBottomOf="@+id/text_name_song"
        />
</android.support.constraint.ConstraintLayout>
